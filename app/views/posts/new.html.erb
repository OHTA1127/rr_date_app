<h2>新しい記録</h2>
  <%= form_with model:@post, local: true do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title%>

    <h4>お勧めする場所</h4>
    <%= f.text_field :location%>

    <h4>説明文</h4>
    <%= f.text_field :description%>

    <h4>写真</h4>
    <%= f.file_field :post_image %>

    <h4>最寄駅</h4>
    <%= f.text_field :station%>

    <h4><%= f.submit '投稿' %></h4>

  <% end %>